<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="5dp"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    card_view:cardCornerRadius="2dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/avatar_usuario"
            android:src="@drawable/avatar2"
            android:scaleType="centerCrop"
            android:contentDescription="@string/description_avatar"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/name"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screenName"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descripcion"
            android:layout_marginTop="7dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/screenName" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/follow"
            android:background="@mipmap/ic_follow_36dp"
            android:contentDescription="@string/description_seguir"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        </RelativeLayout>

</android.support.v7.widget.CardView>
